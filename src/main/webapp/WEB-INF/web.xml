<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>kr.co.wincom.imcs.common.ImcsCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/spring/root-context.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <context-param>
    <param-name>webAppRootKey</param-name>
    <param-value>webapp.imcsapi</param-value>
  </context-param>
  <servlet>
    <servlet-name>appServlet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/spring/appServlet/servlet-context.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>HttpErrorHandler</servlet-name>
    <servlet-class>kr.co.wincom.imcs.handler.HttpErrorHandler</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>appServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>HttpErrorHandler</servlet-name>
    <url-pattern>/HttpErrorHandler</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>400</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>405</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>406</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>407</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>408</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>409</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>410</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>411</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>412</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>413</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>414</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>415</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>416</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>417</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>501</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>502</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>503</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>504</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>505</error-code>
    <location>/HttpErrorHandler</location>
  </error-page>
</web-app>